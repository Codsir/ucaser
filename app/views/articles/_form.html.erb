<%= form_for @article do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= @article.errors.count%>错误导致帖子无法保存:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
   <p>
    <%= f.label :帖子标题 %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :帖子标签 %><br>
    <%= f.text_field :label %>
  </p>
 
  <p>
    <%= f.label :帖子内容 %><br>
    <%= f.text_area :text %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
  
<% end %>

