-# in app/views/posters/show.html.haml

%h2 Details about #{@poster.label}

%ul#details
  %li
    label:
    = @poster.user_id
  %li
    label:
    = @poster.label
  %li
    Released on:
    = @poster.release_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @poster.content

= link_to 'Edit', edit_poster_path(@poster)
= button_to 'Delete', movie_path(@poster), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to poster list', posters_path
